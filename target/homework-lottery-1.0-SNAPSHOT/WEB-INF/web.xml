<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://jakarta.ee/xml/ns/jakartaee http://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">

    <display-name>Green City Lottery</display-name>

    <!-- Default DB settings: using H2 embedded database -->
    <context-param>
        <param-name>db.url</param-name>
        <param-value>jdbc:mysql://localhost:3306/greencity?useSSL=false&amp;serverTimezone=UTC</param-value>
    </context-param>
    <context-param>
        <param-name>db.user</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>db.password</param-name>
        <param-value></param-value>
    </context-param>
    <context-param>
        <param-name>winners.count</param-name>
        <param-value>500</param-value>
    </context-param>

    <!-- Explicit servlet mappings (annotations may not be scanned) -->
    <servlet>
        <servlet-name>LotteryController</servlet-name>
        <servlet-class>com.greencity.controller.LotteryController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LotteryController</servlet-name>
        <url-pattern>/draw</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ResultsController</servlet-name>
        <servlet-class>com.greencity.controller.ResultsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ResultsController</servlet-name>
        <url-pattern>/results</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ApplicantsController</servlet-name>
        <servlet-class>com.greencity.controller.ApplicantsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ApplicantsController</servlet-name>
        <url-pattern>/applicants</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>applicants</welcome-file>
    </welcome-file-list>

</web-app>
